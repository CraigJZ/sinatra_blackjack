<h1>Blackjack</h1>

<h4>Welcome, <%= session[:player_name] %></h4>

<p>Player's Hand:</p>
<ul>
  <% session[:player_hand].each do |card| %>
    <li><%= card.to_s %></li>
  <% end %>
</ul>

<p>
  <%= session[:player_name] %> has <%= calculate_total(session[:player_hand]) %>
  What would you like to do?
<% if @show_hit_or_stay_buttons %>
  <form action="/game/player/hit" method="post">
    <input type="submit" class="btn" value="Hit">
  </form>
  <form action="/game/player/stay" method="post">
    <input type="submit" class="btn" value="Stay">
  </form>
<% end %>
</p>

<p>Dealer's Hand:</p>
<ul>
  <% session[:dealer_hand].each do |card| %>
    <li><%= card.to_s %></li>
  <% end %>
</ul>

<p>
  Dealer has <%= calculate_total(session[:dealer_hand]) %>
</p>
